{% extends ":Layout:layoutAdmin.html.twig" %}

{% block content %}

    <div class="content mt-3">

        <div class="card">
            <div class="card-header">
                <strong class="card-title">Liste des publications</strong>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">Type</th>
                        <th scope="col">Description</th>
                        <th scope="col">Image</th>
                        <th scope="col">User</th>
                        <th scope="col">Date</th>
                        <th scope="col">Time</th>
                        <th scope="col">Signal</th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    {% for produit in produits %}
                        <tbody>
                        <tr>
                            <td >
                                {{ produit.type }}
                            </td>
                            <td>
                                {{ produit.description }}
                            </td>

                            <td>
                                <img src="{{ asset('images/'~produit.image) }}" width="50" height="50">
                            </td>
                            <td>
                                {{ produit.iduser }}
                            </td>
                            <td>
                                {{ produit.date }}
                            </td>
                            <td>
                                {{ produit.time }}
                            </td>
                            <td>
                                {{ produit.signall }}
                            </td>
                            <td>
                                <a class="btn btn-danger" href="{{ path('supprimerpubb',{'id':produit.id}) }}">Supprimer</a>

                            </td>

                        </tr>






                        </tbody>
                    {% endfor %}

                </table>
            </div>
        </div>
    </div>

{% endblock content %}