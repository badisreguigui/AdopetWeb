{% extends ":Layout:layoutAdmin.html.twig" %}

{% block content %}

    <div class="content mt-3">

        <div class="card">
            <div class="card-header">
                <strong class="card-title">Liste des insultes</strong>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">Insultes</th>
                    </tr>
                    </thead>
                    {% for produit in produits %}
                        <tbody>
                        <tr>
                            <td >
                                {{ produit.chaine }}
                            </td>

                        </tr>






                        </tbody>
                    {% endfor %}

                </table>
            </div>
        </div>
        <form action="{{ path('addinsultes') }}" method="post"  class="form-horizontal">
            <div class="row form-group">
                <div class="col-12 col-md-9">
                    <input type="text" id="text-input" name="chaine" placeholder="Insulte" class="form-control">
                </div>
            </div>
          <button type="submit" class="btn btn-primary btn-sm">
                <i class="fa fa-dot-circle-o"></i> Ajouter
            </button>

        </form>
    </div>

{% endblock content %}