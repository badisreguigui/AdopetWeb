{% extends ":Layout:Layout.html.twig" %}
{% block content %}

    <style type="text/css">
        #element1 {display:inline-block;margin-right:10px;}
    </style>

    <!--Main Content Start-->
    <div class="cp-main-content">

    <!--Products Section Start-->
    <section class="cp-product-section pd-t100">
    <div class="container">
        <!-- Info Start-->
        <div class="cp-pro-detail-info">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="cp-product-slider2 pretty-gallery">
                        <div class="owl-carousel" id="cp_product-slider">
                            <div class="item">
                                <img src="{{ asset('images/petsitting/offre.jpg') }}">
                                <a href="images/product/pro-slider-img-01.jpg" data-rel="prettyPhoto"><i class="fa fa-arrows"></i></a>
                            </div>
                            <div class="item">
                                <img src="{{ asset('images/petsitting/offre.jpg') }}">
                                <a href="images/product/pro-slider-img-01.jpg" data-rel="prettyPhoto"><i class="fa fa-arrows"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12">

                    <h2 style="margin-bottom: 10px; margin-top: 5px; font-weight: bold">{{ offreSitting.titre }}</h2>
                    <div class="pro-price">
                        <span class="new" style="margin-bottom: 20px"><i class="fa fa-map-marker" aria-hidden="true"></i> {{ offreSitting.lieu }}</span>
                    </div>
                    <span class="new" style="font-size: 22px"><i class="fa fa-paw" aria-hidden="true"></i> {% if offreSitting.chat %} Chat{% elseif offreSitting.chien %} Chien{% elseif offreSitting.chien %} Autre{% endif %}</span>

                    <br>

                    <span><i class="fa fa-money" aria-hidden="true"></i></span>
                    <div id="element1">
                        <titre style="color: red; font-size: 20px" >{{ offreSitting.prixdemande }} dt</titre>
                    </div>
                    <br>
                    <div style="margin-left: 25px;margin-top: 30px" >
                        <h3> <i class="fa fa-calendar" aria-hidden="true"></i> De <strong>{{ offreSitting.datedebutdispo | date('Y-m-d') }}</strong> à <strong>{{ offreSitting.tmpdebut | date('H:i:s')  }}</strong></h3>
                        <h3> Jusqu'au <strong>{{ offreSitting.datefindispo | date('Y-m-d') }}</strong> à <strong>{{ offreSitting.tmpfin | date('H:i:s')  }}</strong></h3>
                    </div>
                    <br>
                    <ul style="list-style-type: none">
                        <li>
                            <h4> <i class="fa fa-check-circle-o" aria-hidden="true"></i> {% if offreSitting.nourriture %}Je préfere un garde qui peux nourrir mon animal{% else %} J'apporte ma propre nourriture {% endif %}</h4>
                        </li>
                        <li>
                            <h4> <i class="fa fa-check-circle-o" aria-hidden="true"></i> {% if offreSitting.visite %} Je veux visiter mon animal lors de sa garde{% else %} Je ne visiterai pas mon animal lors de sa garde {% endif %}</h4>
                        </li>
                        <li>
                            <h4> <i class="fa fa-check-circle-o" aria-hidden="true"></i> {% if offreSitting.promenade %} J'aimerai que mon animal soit promené par son garde{% else %} J'interdit au garde de promener mon animal {% endif %}</h4>
                        </li>
                    </ul>
                    <br>

                    <p style="border:3px; border-style:solid; border-color:#e4b9c0; padding: 1em;">{{ offreSitting.description }} </p>
                    <br>
                    <span style="font-size: 22px"><i class="fa fa-mobile" aria-hidden="true"></i></span>
                    <div id="element1"><p> {{ offreSitting.numtel }}</p></div>


                </div>
            </div>
        </div>
    </div><!--Product Detail Info End-->
    <ul>
        <li>
            <a href="{{ path('offre_index') }}">Back to the list</a>
        </li>
    </ul>

{% endblock %}