{% extends ":Layout:layoutAdmin.html.twig" %}

{% block content %}

<!-- Right Panel -->


    <!-- Header-->

    <div class="content mt-3">
        <div class="animated fadeIn">


            <div class="row">
                <div class="col-lg-6" style="margin-left: 25%;">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Produit</strong>
                        </div>
                        <div class="card-body">
                            <!-- Credit Card -->
                            <div id="pay-invoice">
                                <div class="card-body">
                                    <div class="card-title">
                                        <h3 class="text-center">Ajouter un Produit</h3>
                                    </div>
                                    <hr>
                                    <form action="" method="post"  class="form-horizontal">
                                        <div class="row form-group">
                                            <div class="col col-md-3"><label for="text-input" class=" form-control-label">Nom</label></div>
                                            <div class="col-12 col-md-9"><input type="text" id="text-input" id="nomp" name="nomproduit" placeholder="Nom du produit" class="form-control" required></div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col col-md-3"><label for="textarea-input" class=" form-control-label">Description</label></div>
                                            <div class="col-12 col-md-9"><textarea name="description" id="textarea-input" rows="9" placeholder="Content..." class="form-control" required></textarea></div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col col-md-3"><label for="text-input" class=" form-control-label">Prix</label></div>
                                            <div class="col-12 col-md-9"><input type="number" id="text-input" name="prix" placeholder="Prix" class="form-control" required></div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col col-md-3"><label for="text-input" class=" form-control-label">Quantite</label></div>
                                            <div class="col-12 col-md-9"><input type="number" id="text-input" name="quantite" min="1" placeholder="Quantite" class="form-control" required></div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col col-md-3"><label for="text-input" class=" form-control-label">Race</label></div>
                                            <div class="col-12 col-md-9"><input type="text" id="text-input" name="nomraceproduit" placeholder="Race" class="form-control" required></div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col col-md-3"><label for="select" class=" form-control-label">Select</label></div>
                                            <div class="col-12 col-md-9">
                                                <select name="nomraceproduit" id="select" class="form-control">
                                                        <option  value="chien">Chien</option>
                                                    <option  value="chat">Chat</option>

                                                </select>
                                            </div>
                                        </div>

                                        <div class="row form-group">
                                            <div class="col col-md-3"><label for="select" class=" form-control-label">Select</label></div>
                                            <div class="col-12 col-md-9">
                                                <select name="categ" id="select" class="form-control">
                                                    {% for categorie in categories %}
                                                        <option  value="{{ categorie.idcategorie }}">

                                                            {{ categorie.nomcategorie }}
                                                        </option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col col-md-3"><label for="select" class=" form-control-label">Select</label></div>
                                            <div class="col-12 col-md-9">
                                                <select name="boutique" id="select" class="form-control">
                                                    {% for boutique in boutiques %}
                                                        <option  value="{{ boutique.Idboutique }}">

                                                            {{ boutique.Nomboutique }}
                                                        </option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col col-md-3"><label for="file-input" class=" form-control-label">Image du Produit</label></div>
                                            <input type="file" name="imageproduit">
                                        </div>
                                        <button type="submit" id="ajout" class="btn btn-primary btn-sm">
                                            <i class="fa fa-dot-circle-o"></i> Ajouter
                                        </button>
                                        <button type="reset" class="btn btn-danger btn-sm">
                                            <i class="fa fa-ban"></i> Reset
                                        </button>
                                    </form>

                                </div>

                            </div>

                        </div>
                    </div> <!-- .card -->

                </div><!--/.col-->








            </div>


        </div><!-- .animated -->
    </div><!-- .content -->

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>

            $('#ajout').click(function(){
                alert("Produit ajout√©");
            });

    </script>
{% endblock content %}